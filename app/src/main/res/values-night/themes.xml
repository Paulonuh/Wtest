<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.WTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_dark_1</item> <!-- Toolbar e AppBar -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text and Icons -->
        <item name="colorPrimaryVariant">@color/blue_dark_2</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item> <!-- Buttons -->
        <item name="colorOnSecondary">@color/white</item> <!-- Text and Icons Buttons -->
        <item name="colorSecondaryVariant">@color/blue_light</item>

        <!-- Surface color. -->
        <item name="colorSurface">@color/blue_dark_1</item> <!-- Cards -->
        <item name="colorOnSurface">@color/white</item> <!-- Content Cards -->
        <item name="colorSurfaceVariant">@color/white_alpha_50</item>
        <item name="colorOnSurfaceVariant">@color/white</item>


        <item name="android:windowBackground">@color/blue_dark_3</item>
        <item name="backgroundColor">@color/blue_dark_3</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
</resources>